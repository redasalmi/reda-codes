---
import { navLinks } from '~/constants';
---

<div class="hidden md:block">
	<ul class="md:flex md:list-none md:gap-[30px] lg:gap-[50px]">
		{
			navLinks.map((link) => (
				<li>
					<a
						href={link.href}
						class="animated-link block text-[1.1rem] font-bold text-fg-black dark:text-fg-white"
					>
						{link.text}
					</a>
				</li>
			))
		}
	</ul>
</div>
