{
  "private": true,
  "name": "redasalmi-portfolio-v2",
  "version": "1.0.0",
  "description": "Reda Salmi Portfolio",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redasalmi/redasalmi-portfolio-v2.git"
  },
  "author": "Reda Salmi <reda.salmi.elt@gmail.com> (https://redasalmi.netlify.app/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/redasalmi/redasalmi-portfolio-v2/issues"
  },
  "homepage": "https://github.com/redasalmi/redasalmi-portfolio-v2#readme",
  "scripts": {
    "css:build": "postcss styles/*.css --dir app/styles",
    "css:build:watch": "npm run css:build -- --watch",
    "css:build:prod": "npm run css:build -- --env production",
    "dev": "npm-run-all -p css:build:watch dev:netlify",
    "dev:netlify": "cross-env NODE_ENV=development BROWSER=none netlify dev --framework remix",
    "start": "cross-env NODE_ENV=production BROWSER=none netlify dev --framework remix",
    "build:remix": "remix build",
    "build:prod": "npm-run-all -s clean css:build:prod build:remix",
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "stylelint": "npx stylelint 'styles/**/*.css'",
    "typecheck": "tsc -b",
    "validate": "npm-run-all -s build:prod -p lint stylelint typecheck test:ci build:remix",
    "clean": "rimraf ./node_modules/.cache ./app/styles ./public/build ./netlify",
    "prepare": "husky install",
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx|json|css)": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@netlify/functions": "^1.0.0",
    "@remix-run/netlify": "^1.3.3",
    "@remix-run/node": "^1.3.3",
    "@remix-run/react": "^1.3.3",
    "framer-motion": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.3",
    "@remix-run/eslint-config": "^1.3.3",
    "@remix-run/serve": "^1.7.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^3.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.15",
    "dotenv": "^16.0.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.3.0",
    "happy-dom": "^8.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^8.0.1",
    "prettier": "2.8.4",
    "rimraf": "^4.1.2",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^30.0.1",
    "typescript": "^4.6.4",
    "vite": "^4.0.2",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.28.4"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "sideEffects": false
}
